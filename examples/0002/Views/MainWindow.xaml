<Window xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:vm="clr-namespace:example_avalonia_opengl.ViewModels;assembly=example" xmlns:local="clr-namespace:example_avalonia_opengl;assembly=example" xmlns:sci="clr-namespace:SearchAThing.Sci;assembly=netcore-sci" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="example_avalonia_opengl.Views.MainWindow" Icon="/Assets/avalonia-logo.ico" x:Name="awin" Title="example_avalonia_opengl">
